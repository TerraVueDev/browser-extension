{
  "name": "Terravue",
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "description": "Terravue is an environmental metrics visualizer of web applications and services.",
  "version": "1.0",
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "manifest_version": 3,
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "32": "assets/icon-32.png"
    }
  }
}